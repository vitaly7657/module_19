@model TxtParse
@{
    ViewData["Title"] = "Деталировка";
}

<h1>Деталировка</h1>

<body>
    <table border="1"
           align="left"
           cellpadding="10">
        <tr>  <th>ID</th><th>Фамилия</th><th>Имя</th><th>Отчество</th><th>Номер телефона</th><th>Адрес</th><th>Описание</th>  </tr>
        <tr>
            <td>@TxtParse.ArrayPerson(2,0)</td>
            @{
                for (int i = 1; i <= 6; i++)
                {
                    <td>@TxtParse.ArrayPerson(2,i)</td>
                }
            }
        </tr>
    </table>
    <a href="/">вернуться к списку</a>
</body>
